<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@drawable/fondo_01">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <TextView
            android:paddingTop="16dp"
            android:id="@+id/lblDisponibles"
            android:layout_below="@id/btnNuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PACIENTES REGISTRADOS"
            android:textSize="20dp" android:gravity="center"/>
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:layout_below="@id/lblDisponibles"/>
        <Button
            android:id="@+id/btnNuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Paciente"
            android:background="@drawable/btn_style"
            android:textColor="@color/blanco"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>